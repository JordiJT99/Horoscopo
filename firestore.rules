rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permite a los usuarios leer y escribir solo en su propio documento de perfil.
    match /userProfiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deniega el acceso a cualquier otra colección/documento por defecto.
    // Esta regla es opcional si la de arriba es la única, pero es una buena práctica de seguridad.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
