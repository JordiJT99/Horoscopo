
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    match /horoscopes/{period}/{dateKey}/{locale} {
      allow read: if true;
      allow write: if false; // Solo desde el backend
    }

    match /horoscopes/personalized/{date}/{locale}/{sign}/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // =================================================================
    // REGLAS DE LA COMUNIDAD
    // =================================================================
    match /community-posts/{postId} {
      // Cualquiera puede leer las publicaciones
      allow read: if true;
      
      // Solo los usuarios autenticados pueden crear publicaciones, y deben ser el autor
      allow create: if request.auth != null && request.auth.uid == request.resource.data.authorId;
      
      // Solo el autor original puede actualizar o eliminar su publicación
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.authorId;

      // --- Subcolección de Comentarios ---
      match /comments/{commentId} {
        // Cualquiera autenticado puede leer y añadir comentarios
        allow read, create: if request.auth != null;
        
        // Solo el autor del comentario puede editarlo o eliminarlo
        allow update, delete: if request.auth != null && request.auth.uid == resource.data.authorId;
      }
    }
    
    // =================================================================
    // REGLAS DE PERFILES DE USUARIO
    // =================================================================
    match /userProfiles/{userId} {
      // Cualquiera puede leer perfiles (para avatares, nombres, etc.)
      allow read: if true;
      
      // Solo el propietario del perfil puede escribir en él
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
